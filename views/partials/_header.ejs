<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(users[userId]) { %>
      <form method="POST" action="/logout">
        <div class="form-inline">
          <div class="form-group">
            <span class="font-weight-bold">Logged in as:&nbsp;</span><span class="mr-2"><%= users[userId].email %>!</span>
            <button class="btn btn-outline-dark d-inline" type="submit">Logout</button>
          </div>
        </div>
      </form>
    <% } else { %>
      <form method="POST" action="/login">
        <div class="form-inline">
          <div class="form-group">
            <input class="form-control mr-2" name="userId" type="text" placeholder="User ID">
            <button class="btn btn-outline-dark d-inline" type="submit">Login</button>
          </div>
        </div>
      </form>
    <% } %>
  </nav>
</header>